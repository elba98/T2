<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="271dp"
        android:layout_height="75dp"
        app:srcCompat="@drawable/t2" />

    <TextView
        android:id="@+id/messageCenter_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Message Center"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@android:color/darker_gray"
        android:textSize="22sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/messageText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@android:color/darker_gray"
        android:textSize="22sp"
        android:textStyle="bold" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <Button
        android:id="@+id/messageOne"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="#A1FFEB3B"
        android:text='From Bob | "Hey, hows it going? Its been too long"'
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />
    <Button
        android:id="@+id/messageTwo"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="#A1FFEB3B"
        android:text='From Paul | "You wanna chill later? The hockey game is on at 8"'
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />
    <Button
        android:id="@+id/messageThree"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="#A1FFEB3B"
        android:text='From Jim | "Studying for the final, what about you? The grind is real"'
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />
    <Button
        android:id="@+id/messageFour"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="#A1FFEB3B"
        android:text='From Carter | "We have the game next week, you better be ready!"'
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="70dp" />

    <Button
        android:id="@+id/messageBack_button"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Back" />

</LinearLayout>