<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center|top"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="165dp"
        app:srcCompat="@drawable/t2" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="100dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/t2_orange_dark"
        android:backgroundTint="@color/t2_orange_light"
        android:text="User Preferences" />

    <Button
        android:id="@+id/changeName_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/t2_orange_dark"
        android:backgroundTint="@color/t2_orange_light"
        android:text="Change Name" />

    <Button
        android:id="@+id/changeEmail_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/t2_orange_dark"
        android:backgroundTint="@color/t2_orange_light"
        android:text="Change Email" />

    <Button
        android:id="@+id/changeLocation_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/t2_orange_dark"
        android:backgroundTint="@color/t2_orange_light"
        android:text="Change Location" />


    <Button
        android:id="@+id/signout_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/t2_orange_dark"
        android:backgroundTint="@color/t2_orange_light"
        android:text="Signout" />


    <Space
        android:layout_width="match_parent"
        android:layout_height="91dp" />

    <Button
        android:id="@+id/back_button"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:background="@color/t2_orange_dark"
        android:backgroundTint="@color/t2_orange_light"
        android:text="Back" />


</LinearLayout>