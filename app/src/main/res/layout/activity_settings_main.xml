<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center|top"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="165dp"
        app:srcCompat="@drawable/t2" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="100dp" />

    <Button
        android:id="@+id/userPreferences_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/t2_orange_dark"
        android:backgroundTint="@color/t2_yellow"
        android:text="User Preferences"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/changeName_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/t2_orange_dark"
        android:backgroundTint="@color/t2_yellow"
        android:text="More Settings to be implemented when needed"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/changeEmail_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/t2_orange_dark"
        android:backgroundTint="@color/t2_yellow"
        android:text="More Settings Categories 2"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/changeLocation_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/t2_orange_dark"
        android:backgroundTint="@color/t2_yellow"
        android:text="More Settings Categories 3"
        android:textColor="@android:color/white" />


    <Button
        android:id="@+id/signout_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/t2_orange_dark"
        android:backgroundTint="@color/t2_yellow"
        android:text="Signout"
        android:textColor="@android:color/white"/>


    <Space
        android:layout_width="match_parent"
        android:layout_height="91dp" />

    <Button
        android:id="@+id/back_button"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:background="@color/t2_orange_light"
        android:backgroundTint="@color/t2_orange_dark"
        android:text="Back"
        android:textColor="@android:color/white"/>


</LinearLayout>