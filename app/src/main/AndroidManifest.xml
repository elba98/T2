<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cp317.t2.t2">
    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/t2"
        android:label="@string/app_name"
        android:roundIcon="@drawable/t2"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".HomepageActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RegisterActivity"></activity>
        <activity android:name=".LoginActivity"></activity>
        <activity android:name=".SettingsActivity"></activity>
        <activity android:name=".DashboardActivity"></activity>
        <activity android:name=".SearchByCourseActivity"></activity>
        <activity android:name=".TuteeProfileActivity"></activity>
        <activity android:name=".TutorProfileActivity"></activity>
        <activity android:name=".ChatRoomActivity"></activity>
        <activity android:name=".MessageActivity"></activity>
        <activity android:name=".SettingsUserActivity"></activity>
        <activity android:name=".SettingsPasswordActivity"></activity>
    </application>
</manifest>